<div>
  <div>
    <h1>
      <%=@current_user.first_name+" "+@current_user.last_name %>'s bookmarks
    </h1>
  </div>
</div>

<form action = "/insert_bookmark" method = "post">

    
    <select name = "query_movie_id">
      <%Movie.all.order(:title).each do |a_movie|%>
      <option value = "<%=a_movie.id%>"> 
        <%=a_movie.title%>
      </option>
    <%end%>
    </select>
  <button>
    Bookmark this movie!
  </button>
</form>
<hr>

<table border="1">
  <tbody>
    <tr>
      <th>Movie</th>	
      <th>Created at</th>
      <th></th>
    </tr>
    <% @list_of_bookmarks.each do |a_bookmark| %>
  
    <tr>
      <td>
        <a href = "/movies/<%=a_bookmark.movie_id%>">
          <%=a_bookmark.movie.title%></a></td>
      <td><%=a_bookmark.created_at%></td>
      <td>
        <a href = "/delete_bookmark/<%=a_bookmark.id%>">Un-bookmark</a>
      </td>
    </tr>
    <%end%>
</table>

  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <%= a_bookmark.id %>
        </td>

        <td>
          <%= a_bookmark.user_id %>
        </td>

        <td>
          <%= a_bookmark.movie_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= a_bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
